FILE_NAME = "assignment_1.ppm"
IMAGE_TYPE = "P3"
X_MAX = 500
Y_MAX = 500
MAX_COLOR = 500


fd = open("../../image_files/" + FILE_NAME, "w")
fd.write(IMAGE_TYPE + " " + str(X_MAX) + " " + str(Y_MAX) + " " + str(MAX_COLOR))

cX = 0
cY = 0

while(cY < Y_MAX):
    while(cX < X_MAX):
          fd.write(" " + str(MAX_COLOR - cX) + " " + str(MAX_COLOR - cX) + " " + str(MAX_COLOR - cX))
          cX+=1
    cY += 1

    
          
        

